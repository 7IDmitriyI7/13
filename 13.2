using System;

namespace _13._2
{
    class Program
    {
        static void Main(string[] args)
        {
            double p = 1;
            Console.WriteLine("Введите N    ");
            int N = Convert.ToInt32(Console.ReadLine());

            for (int i = 1; i <= N; i++)
            {
                p = p * (1 + 0.1 * i);
            }
            Console.WriteLine("Ответ " + p);
        }
    }
}
